<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="WhiteLabel.Login"
             BackgroundImage="bg.jpg">    
    
    <ContentPage.Content>
        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">            
            <Entry IsPassword="false" Placeholder="User ID" WidthRequest="300" HeightRequest="50"/>
            <Entry IsPassword="true" Placeholder="Password" WidthRequest="300" HeightRequest="50"/>
            <Button Margin="0, 50" Text="Login" Clicked="Handle_Clicked" WidthRequest="200" HeightRequest="40" BorderColor="White" TextColor="White" BackgroundColor="#37484d"/>
            <Picker x:Name="picker" SelectedIndex="1" BackgroundColor="#37484d" Opacity=".5" Title="Language" HorizontalOptions="Center" TextColor="White" WidthRequest="200">
                <Picker.Items>                    
                    <x:String>English</x:String> 
                    <x:String>Hindi</x:String>
                    <x:String>Spanish</x:String>
                </Picker.Items>
            </Picker>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
